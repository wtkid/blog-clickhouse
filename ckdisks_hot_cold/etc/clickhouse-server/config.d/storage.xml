<clickhouse>
    <path>/data/clickhouse/</path>
    <storage_configuration>
        <disks>
            <hot_disk_name>
                <path>/data1/clickhouse/</path>
                <keep_free_space_bytes>10485760</keep_free_space_bytes>
            </hot_disk_name>
            <hot_disk_name1>
                <path>/data11/clickhouse/</path>
                <keep_free_space_bytes>10485760</keep_free_space_bytes>
            </hot_disk_name1>
            <cold_disk_name>
                <path>/data2/clickhouse/</path>
                <keep_free_space_bytes>10485760</keep_free_space_bytes>
            </cold_disk_name>
            <cold_disk_name1>
                <path>/data22/clickhouse/</path>
                <keep_free_space_bytes>10485760</keep_free_space_bytes>
            </cold_disk_name1>
        </disks>

        <policies>
            <single>
                <volumes>
                    <single>
                        <disk>hot_disk_name</disk>
                        <disk>cold_disk_name</disk>
                    </single>
                </volumes>
            </single>
            
            <moving_from_ssd_to_hdd>
                <volumes>
                    <hot>
                        <disk>hot_disk_name</disk>
                        <disk>hot_disk_name1</disk>
                        <max_data_part_size_bytes>5242880</max_data_part_size_bytes>
                        <volume_priority>2</volume_priority>
                    </hot>
                    <cold>
                        <disk>cold_disk_name</disk>
                        <disk>cold_disk_name1</disk>
                        <volume_priority>1</volume_priority>
                    </cold>
                </volumes>
                <move_factor>0.2</move_factor>
            </moving_from_ssd_to_hdd>
        </policies>
    </storage_configuration>
</clickhouse>
